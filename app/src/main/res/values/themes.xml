<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- White theme. -->
    <style name="Theme.white" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- White theme. -->
    <style name="Theme.dark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.splash" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/s_image</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>